<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Task" parent="Theme.Material3.Light">
        <item name="android:colorBackgroundFloating">@color/white</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="colorSecondary">@color/dark_gray</item>
    </style>
    <style name="main_title">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:fontFamily">@font/inter_extrabold</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="sub_title">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>
</resources>